@import ('nib')


/* @CUSTOM colors for easy use */
_accent = #2f54a0
/* end @CUSTOM */

.fira-sans
  font-family 'Fira Sans', sans-serif

.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .fira-sans

html,
body
  width 100%
  height 100%
  @extends .fira-sans
  background darken(_accent, 20%)

.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .fira-sans
    border 2px solid #DDD
    box-shadow none
    border-radius 7px
    padding 18px 20px 13px 20px
    appearance none
  button
    @extends .fira-sans
    appearance none

.pure-button
  border 2px solid rgba(#FFF, 0.4)
  border-radius 7px
  padding 14px 17px 8px 17px
  color rgba(#FFF, 0.9)
  background none
  box-shadow none
  span,
  i,
  img
    display inline-block
    vertical-align middle

  span
    text-transform uppercase
    font-weight 500

  &:hover
    border-color #FFF
    background none
    color #FFF
  &:hover,
  &:active,
  &:focus
    background none
    box-shadow none

  &.pure-button-accent
    color _accent

  &.pure-button-rounded
    padding 0
    border none
    i
      width 44px
      height 44px
      border-radius 44px
      line-height 48px
      text-align center
      font-size 20px
      border 2px solid rgba(#FFF, 0.4)
      margin-right 10px
    span
      padding-top 3px
    &:hover
      i
        border-color #FFF

/* @CUSTOM CSS for fast start */
.container
  padding 50px

.fixed-container
  width 1280px
  margin auto
  max-width 90%

.page
  width 100%
  height auto
  &.page-white
    background #FFF
  &.page-light
    background #F2F2F2
  &.page-texture
    background _accent url('../img/blue-texture.jpg') no-repeat center fixed
    background-size cover
    color #FFF

    a.link
      color rgba(#FFF, 0.9)
      box-shadow inset 0 -2px 0 rgba(#FFF, 0.2)
      transition color 0.3s ease, box-shadow 0.3s ease
      display inline-block
      &:hover
        color #FFF
        box-shadow inset 0 -2px 0 rgba(#FFF, 0.5)

.to-show-mobile
  display none

h1
  font-size 50px
  font-weight 300
  line-height 54px
  letter-spacing -3px
  strong
    font-weight 500

h2
  font-size 26px
  line-height 36px
  font-weight 300
  strong
    font-weight 500

p
  font-size 21px
  font-weight 300
  line-height 30px
  strong
    font-weight 500

_spacer = 5, 10, 20, 40, 60, 80, 100, 150

for _val in _spacer
  .spacer-{ _val }
    height ( _val * 1px )

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right

.pull-right
  float right

.pull-left
  float left

.clear
  clear both

a.link
  text-decoration none
  color #333
  box-shadow inset 0 -2px 0 rgba(#333, 0.2)
  transition color 0.3s ease, box-shadow 0.3s ease
  display inline-block
  font-weight 400
  &:hover
    color _accent
    box-shadow inset 0 -2px 0 rgba(_accent, 0.5)
/* end @CUSTOM */

header
  color #FFF
  clearfix()
  position absolute
  z-index 100
  top 50px
  left 50px
  right 50px
  img.logo
    width 284px
    margin-top 7px
  ul#menu
    list-style none
    margin 0
    padding 0
    li
      display inline-block
      margin-right 40px
      a
        text-transform uppercase
        font-size 16px
        font-weight 400
        text-decoration none
        color rgba(#FFF, 0.6)
        outline none !important
        &:hover
          color #FFF
      &:last-child
        margin-right 0

#app
  transition transform 0.4s ease
  .preview
    transition transform 0.4s ease
  &.hidden
    transform scale(0.9, 0.9)
    .preview
      transform scale(1.05, 1.05)

#scrolldown
  color #FFF
  text-align center
  font-weight 400
  font-size 12px
  text-transform uppercase
  opacity 0.9
  position absolute
  z-index 100
  display block
  width 160px
  left 50%
  bottom 50px
  transform translate(-50%, 0)
  height 60px
  animation scrolldown 3s infinite
  text-decoration none
  span,
  i
    display block
    text-align center
  span
    margin-bottom 5px
    margin-top 10px
  i
    margin 0
    &:last-child
      margin-top -12px

section#landing
  position relative
  width 100%
  overflow hidden
  min-height 800px !important

  #claim
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

section#dashboard
  .preview
    width 1280px
    max-width 90%
    margin auto
    position relative
    height 430px
    #discover
      position absolute
      top -240px
      visibility hidden
    img
      position absolute
      width 1280px
      max-width 100%
      display block
      border-radius 10px
      bottom 0
      box-shadow 0 0 20px rgba(#000, 0.15)


.mask-signup
  background rgba(#101010, 0.8)
  position fixed
  display none
  top 0
  left 0
  width 100%
  height 100%
  opacity 0
  transition opacity 0.5s ease
  &.visible
    opacity 1

section#signup
  background #FFF
  color #333
  position fixed
  display none
  bottom -400px
  left 0
  right 0
  transition bottom 0.5s ease
  box-shadow 0 0 20px rgba(#101010, 0.3)

  &.visible
    bottom 0

  .pure-form
    width 640px
    max-width 100%
    display block
    margin auto
    input,
    button
      display inline-block
      vertical-align middle
    input
      width 480px
      margin-right 20px
    button
      color _accent
      padding 0
      i
        border 2px solid _accent
      &:hover
        i
          background rgba(_accent, 0.1)

  button.close
    position absolute
    top -80px
    left 50%
    transform translate(-50%, 0)
    i
      line-height 52px

.profile
  text-align center
  display inline-block
  vertical-align top
  .profile-picture
    width 240px
    height 240px
    margin auto
    background-size 240px 240px
    background-position center
    background-repeat no-repeat
    position relative
    img.mask
      position absolute
      z-index 10
      width 250px
      height 250px
      top -5px
      left -5px
      right -5px
      bottom -5px
    .overlay
      position absolute
      z-index 5
      background rgba(_accent, 0.8)
      width 100%
      height 100%
      color #FFF
      opacity 0
      .overlay-text
        position absolute
        top 50%
        left 50%
        width 100%
        transform translate(-50%, -50%)
        h3
          font-weight 300
          text-transform none
          letter-spacing 1px
          margin 10px 0
        h4
          margin 0
          text-transform uppercase
          font-weight 500
    &:hover
      .overlay
        opacity 1

section#meet
  overflow hidden

section#footer
  .container
    clearfix()
  p
    font-size 14px
    img,
    span
      display inline-block
      vertical-align middle

    span
      padding-top 3px
      color #999
    a.link
      padding-top 3px
      margin-left 10px

  a.sponsor
    opacity 1
    outline none !important
    &:hover
      opacity 0.8
    & + a
      margin-left 20px
    img
      height 60px
      width auto
  img
    width 200px

@media all and (max-width: 1280px)
  html,
  body
    width 100%
    height 100%

@media all and (max-width: 960px)
  .to-hide-midsize
    display none

  .pull-right,
  .pull-left
    float none

  section#landing
    header
      text-align center
      .logo
        width 200px
      #menu
        margin-top 20px
    #claim
      & > h1
        padding-top 50px

  section#footer
    text-align center
    .pull-left,
    .pull-right
      text-align center
      margin-bottom 10px

  section#signup
    .container
      padding 20px
    h1
      font-size 24px
      line-height 36px
    .pure-form
      input
        margin 0
        margin-bottom 10px
        width 100%
        display block

@media all and (max-width: 640px)
  .to-hide-mobile
    display none
  .to-show-mobile
    display block

  .container
    padding 30px 20px

  #scrolldown
    display none

  .page
    &.page-texture
      background-size cover
      background-position center
      background-attachment scroll

  section#landing
    height auto !important
    header
      top 40px
      left 20px
      right 20px
      #menu
        display none

    #claim
      position relative
      top auto
      left auto
      transform none

    h1
      font-size 40px
      line-height 40px
    h2
      font-size 24px
      line-height 28px

  section#meet
    .profile
      .profile-picture
        width 180px
        height 180px
        background-size 180px 180px
        margin 10px
        img.mask
          width 190px
          height 190px
        .overlay
          .overlay-text
            h3
              font-size 16px
            h4
              font-size 14px

@keyframes scrolldown
  0%
    bottom 50px
  50%
    bottom 30px
  100%
    bottom 50px


@import ('font')
