@import ('nib')
@import ('font')
@import url('//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700')


/* @CUSTOM colors for easy use */
_accent = #e62b28
/* end @CUSTOM */

.open-sans
  font-family 'Open Sans', sans-serif

.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .open-sans

html,
body
  width 100%
  height 100%
  @extends .open-sans
  background darken(_accent, 20%)
  overflow hidden

.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .open-sans
    border 2px solid #DDD
    box-shadow none
    border-radius 7px
    padding 15px 20px 16px 20px
  button
    @extends .open-sans

.pure-button
  border 2px solid lighten(_accent, 40%)
  border-radius 7px
  padding 10px 17px 12px 17px
  color lighten(_accent, 90%)
  background none
  box-shadow none
  span,
  i,
  img
    display inline-block
    vertical-align middle

  span
    text-transform uppercase
    font-weight 600
    font-size 16px

  &:hover
    border-color #FFF
    background none
    color #FFF
  &:hover,
  &:active,
  &:focus
    background none
    box-shadow none

/* @CUSTOM CSS for fast start */
.container
  padding 50px

.page
  width 100%
  height auto
  overflow hidden

h1, h2, h3
  font-weight 700
  text-transform uppercase
  line-height 100%
  letter-spacing -3px
h4, h5, h6
  font-weight 600

_spacer = 5, 10, 20, 40, 60, 80, 100, 150

for _val in _spacer
  .spacer-{ _val }
    height ( _val * 1px )

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right

a.link
  text-decoration none
  color #333
  box-shadow inset 0 -2px 0 rgba(#333, 0.2)
  transition color 0.3s ease, box-shadow 0.3s ease
  display inline-block
  &:hover
    color _accent
    box-shadow inset 0 -2px 0 rgba(_accent, 0.3)
/* end @CUSTOM */

header
  color #FFF
  img.logo
    width 245px
  .pull-right
    float right
    margin-top 3px

section#landing
  position relative
  background _accent
  color #FFF
  width 100%
  height 100%
  transition transform 0.3s ease
  transform-origin center bottom

  &.hidden
    transform scale(0.9, 0.9)

  .claim
    width 430px
    opacity 0
    transform translate(-50px, 0)
    transition all 0.7s ease
    &.showed
      opacity 1
      transform translate(0, 0)

  .image
    position absolute
    top 150px
    bottom 0
    right 50px
    left 530px
    text-align right
    img
      display inline-block
      height 100%
      transition transform 1s ease
      transform translate(0, 200px)
    &.showed
      img
        transform translate(0, 0)

  h1
    color lighten(_accent, 70%)
    font-size 48px
    strong
      color #FFF
      font-weight 700

  p
    font-weight 300
    font-size 24px
    color lighten(_accent, 80%)
    strong
      color #FFF
      font-weight 600

.mask-signup
  background rgba(#101010, 0.8)
  position fixed
  display none
  top 0
  left 0
  width 100%
  height 100%
  opacity 0
  transition opacity 0.5s ease
  &.visible
    opacity 1

section#signup
  background #FFF
  color #333
  position fixed
  display none
  bottom -400px
  left 0
  right 0
  transition bottom 0.5s ease
  box-shadow 0 0 20px rgba(#101010, 0.3)

  &.visible
    bottom 0

  h1
    color #333
    font-size 48px
    strong
      color _accent
      font-weight 700

  .pure-form
    width 640px
    display block
    margin auto
    input,
    button
      display inline-block
      vertical-align middle
    input
      width 480px
    button
      color _accent
      border none
      padding 10px
      margin-left 20px
      i
        border-radius 25px
        border 2px solid _accent
        padding 5px
        margin-right 10px
      span
        font-size 14px
        font-weight 700
      &:hover
        i
          background rgba(_accent, 0.1)

      &.close
        color #FFF
        position absolute
        top -80px
        left 50%
        margin 0
        opacity 0
        transform translate(-50%, 0)
        transition opacity 0.7s ease 0.3s
        &.visible
          opacity 1
        i
          border-color #FFF
          padding 10px
        &:hover
          i
            background rgba(#FFF, 0.1)


